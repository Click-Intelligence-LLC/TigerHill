name: Generate and Run Tests

on:
  push:
    branches: [main, develop]
    paths:
      - 'tests/config/**'  # Trigger when config changes
  pull_request:
    branches: [main]
  workflow_dispatch:  # Allow manual trigger

jobs:
  generate-and-test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.8'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
          pip install -e .

      - name: List available templates
        run: |
          python -m tigerhill.template_engine.cli --list

      - name: Generate tests from config
        run: |
          # Generate all test suites
          python -m tigerhill.template_engine.cli \
            --config tests/config/api_tests.yaml \
            --force

          python -m tigerhill.template_engine.cli \
            --config tests/config/llm_tests.yaml \
            --force

      - name: Show generated structure
        run: |
          find tests -name "test_*.py" -type f

      - name: Run generated tests
        run: |
          pytest tests/ -v --cov=tigerhill --cov-report=xml

      - name: Upload coverage
        uses: codecov/codecov-action@v3
        with:
          file: ./coverage.xml

      - name: Archive test results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: test-results
          path: |
            tests/
            .pytest_cache/
